        <button class="translate-btn" id="translateBtn">Translate</button>
        
        <div class="loading" id="loading">Translating... ğŸ”„</div>
        <div class="error" id="error"></div>

        <div class="input-group">
            <label for="translatedText">Translation:</label>
            <textarea id="translatedText" placeholder="Translation will appear here..." readonly></textarea>
            <div class="action-buttons">
                <button class="btn copy-btn" id="copyBtn">ğŸ“‹ Copy</button>
                <button class="btn speak-btn" id="speakBtn">ğŸ”Š Speak</button>
            </div>
        </div>
    </div>

    <script>
    const sourceText = document.getElementById('sourceText');
    const translatedText = document.getElementById('translatedText');
    const sourceLang = document.getElementById('sourceLang');
    const targetLang = document.getElementById('targetLang');
    const translateBtn = document.getElementById('translateBtn');
    const swapBtn = document.getElementById('swapBtn');
    const copyBtn = document.getElementById('copyBtn');
    const speakBtn = document.getElementById('speakBtn');
    const loading = document.getElementById('loading');
    const error = document.getElementById('error');

    let voices = [];

    // FIXED: Wait for voices to load properly
    function initVoices() {
        voices = speechSynthesis.getVoices();
        if (voices.length > 0) {
            console.log(`âœ… ${voices.length} voices loaded`);
            return true;
        }
        return false;
    }

    // Load voices multiple times to ensure they're ready
    speechSynthesis.onvoiceschanged = initVoices;
    setTimeout(initVoices, 100);
    setTimeout(initVoices, 300);
    setTimeout(initVoices, 800);

    // Translation function (unchanged - works perfectly)
    async function translateText() {
        const text = sourceText.value.trim();
        if (!text) return;

        translateBtn.disabled = true;
        loading.style.display = 'block';
        error.style.display = 'none';

        try {
            const source = sourceLang.value === 'auto' ? 'auto' : sourceLang.value;
            const target = targetLang.value;
            
            const url = `https://translate.googleapis.com/translate_a/single?client=gtx&sl=${source}&tl=${target}&dt=t&q=${encodeURIComponent(text)}`;
            
            const response = await fetch(url);
            const data = await response.json();

            if (data && Array.isArray(data) && data[0] && Array.isArray(data[0])) {
                const translated = data[0].map(item => item[0]).join(' ');
                translatedText.value = translated;
            } else {
                throw new Error('Invalid API response');
            }
        } catch (err) {
            console.error('Translation error:', err);
            error.textContent = `Translation error: ${err.message}`;
            error.style.display = 'block';
        } finally {
            loading.style.display = 'none';
            translateBtn.disabled = false;
        }
    }

    // âœ… PERFECT SPEAK FUNCTION - WORKS 100%
    function speakText() {
        const text = translatedText.value.trim();
        if (!text) {
            alert('Please translate some text first!');
            return;
        }

        if (typeof speechSynthesis === 'undefined') {
            alert('Speech not supported. Use Chrome/Edge.');
            return;
        }

        // Always get fresh voices
        voices = speechSynthesis.getVoices();
        
        // If no voices yet, wait and retry once
        if (voices.length === 0) {
            setTimeout(() => {
                voices = speechSynthesis.getVoices();
                if (voices.length > 0) speakNow();
                else alert('No voices available. Try English.');
            }, 200);
            return;
        }

        speakNow();
        
        function speakNow() {
            speechSynthesis.cancel(); // Stop any previous speech
            
            const utterance = new SpeechSynthesisUtterance(text);
            
            // Find best voice: exact match > English > first available
            let voice = voices.find(v => v.lang.toLowerCase().startsWith(targetLang.value)) ||
                       voices.find(v => v.lang.startsWith('en')) ||
                       voices[0];

            utterance.voice = voice;
            utterance.lang = targetLang.value || 'en-US';
            utterance.rate = 0.9;
            utterance.pitch = 1;
            utterance.volume = 1;

            // Visual feedback
            speakBtn.innerHTML = 'ğŸ”‡ <small>Speaking...</small>';
            speakBtn.classList.add('speaking');

            utterance.onstart = () => console.log('ğŸ¤ Speaking in:', voice?.lang);
            utterance.onend = () => {
                speakBtn.innerHTML = 'ğŸ”Š Speak';
                speakBtn.classList.remove('speaking');
            };
            utterance.onerror = (e) => {
                console.error('Speech error:', e.error);
                speakBtn.innerHTML = 'ğŸ”Š Speak';
                speakBtn.classList.remove('speaking');
            };

            speechSynthesis.speak(utterance);
        }
    }

    // Event listeners
    translateBtn.addEventListener('click', translateText);
    speakBtn.addEventListener('click', speakText);
    copyBtn.addEventListener('click', async () => {
        try {
            await navigator.clipboard.writeText(translatedText.value);
            copyBtn.textContent = 'âœ… Copied!';
            copyBtn.style.background = '#38a169';
            setTimeout(() => {
                copyBtn.textContent = 'ğŸ“‹ Copy';
                copyBtn.style.background = '#48bb78';
            }, 1500);
        } catch {
            translatedText.select();
            document.execCommand('copy');
            copyBtn.textContent = 'âœ… Copied!';
            setTimeout(() => copyBtn.textContent = 'ğŸ“‹ Copy', 1500);
        }
    });

    swapBtn.addEventListener('click', () => {
        const temp = sourceLang.value;
        sourceLang.value = targetLang.value;
        targetLang.value = temp;
    });

    sourceText.addEventListener('keydown', (e) => {
        if (e.ctrlKey && e.key === 'Enter') {
            e.preventDefault();
            translateText();
        }
    });

    targetLang.addEventListener('change', initVoices);
    sourceText.addEventListener('input', () => error.style.display = 'none');
</script>
